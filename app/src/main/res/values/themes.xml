<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthyKids" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColorHint">@color/lion</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

        // Spinner
        <item name="spinnerStyle">@style/SpinnerTheme</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="Theme.HealthyKids" parent="Base.Theme.HealthyKids" />

    <style name="Theme.HealthyKids.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">#C5E0B5</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.HealthyKids</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/bold_700</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black_75</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:lineSpacingExtra">@dimen/_1sdp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextFieldTitle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/semibold_600</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_field_selector</item>
        <item name="android:strokeAlpha">0.5</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="boxCornerRadiusTopStart">@dimen/_0.75x_default_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_0.75x_default_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_0.75x_default_margin</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_0.75x_default_margin</item>
        <item name="android:textColorHint">@color/lion</item>

    </style>

    <style name="Spinner" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_field_selector</item>
        <item name="android:strokeAlpha">0.5</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="boxCornerRadiusTopStart">@dimen/_0.75x_default_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_0.75x_default_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_0.75x_default_margin</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_0.75x_default_margin</item>
        <item name="android:textColorHint">@color/lion</item>
        <!--        <item name="endIconMode">custom</item>-->
        <item name="endIconDrawable">@drawable/ic_dropdown_arrow</item>
        <item name="endIconTint">@color/lion</item>


    </style>


    <style name="TextInputEditText">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/lion</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SolidButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/_4sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/medium_500</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_4sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/red</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:fontFamily">@font/medium_500</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_background_rectangle_top</item>
    </style>

    <style name="BottomNavigationTextAppearanceActive">
        <item name="android:fontFamily">@font/bold_700</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="BottomNavigationTextAppearanceInactive">
        <item name="android:fontFamily">@font/semibold_600</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/medium_500</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/regular_400</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@drawable/rounded_background_rectangle_phosphoric
        </item>
        <item name="android:gravity">start</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/lion</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:padding">@dimen/_1x_default_margin</item>
    </style>

    <style name="SpinnerDropDownItem" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/lion</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:padding">@dimen/_1x_default_margin</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>