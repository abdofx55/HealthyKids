<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layoutDirection="rtl"
        tools:context=".feature.profile.about_app.presentation.AboutAppFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1x_default_margin"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1x_default_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_1x_default_margin"
                android:src="@drawable/ic_arrow_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_400"
                android:layout_marginStart="@dimen/_1x_default_margin"
                android:text="@string/instructions_toolbar"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_1x_default_margin"
            android:layout_marginTop="@dimen/_2x_default_margin"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_2x_default_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar2">


            <!-- Text View for "Participate in our auction and gain access to the following features:" -->
            <TextView
                android:id="@+id/textParticipateFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/semibold_600"
                android:lineSpacingExtra="@dimen/_0.5x_default_margin"
                android:text="@string/instructions_title"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="@dimen/_0.5x_default_margin"
                android:justificationMode="inter_word"
                android:fontFamily="@font/regular_400"
                android:lineSpacingExtra="@dimen/_0.5x_default_margin"
                android:text="@string/instruction_text"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                tools:targetApi="o" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>